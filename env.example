# 应用配置
APP_NAME=小说生成智能体框架
VERSION=1.0.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=*

# 数据库配置
DATABASE_URL=postgresql://novel_user:novel_password@localhost:5432/novel_generate
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=novel_neo4j_password

# Redis配置
REDIS_URL=redis://localhost:6379/0

# AI模型配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# 阿里云通义千问配置
ALIBABA_QWEN_API_KEY=your_alibaba_qwen_api_key_here
ALIBABA_QWEN_MODEL=qwen3-max
ALIBABA_QWEN_TEMPERATURE=0.7
ALIBABA_QWEN_MAX_TOKENS=12000

# 本地LLM配置
LOCAL_LLM_ENABLED=false
LOCAL_LLM_MODEL_PATH=
LOCAL_LLM_DEVICE=cpu

# 评分配置
SCORING_WEIGHTS_LOGIC_CONSISTENCY=0.3
SCORING_WEIGHTS_DRAMATIC_CONFLICT=0.2
SCORING_WEIGHTS_CHARACTER_CONSISTENCY=0.2
SCORING_WEIGHTS_WRITING_QUALITY=0.15
SCORING_WEIGHTS_INNOVATION=0.1
SCORING_WEIGHTS_USER_PREFERENCE=0.05

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=novel_generate

# 任务队列配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 文件存储配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 安全配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
